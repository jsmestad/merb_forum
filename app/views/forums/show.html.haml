#breadcrumb
  %a{:href => url(:root)}
    MerbHerd
  >>
  = @forum.name

%h1
  = @forum.name

.action-items
  = link_to 'New Topic', url(:new_forum_topic, @forum)

%table.wide
  %tr
    %th{ :colspan => '2' }
      Topic
    %th
      Replies
    %th
      Last Post
    %th
      Admin
  - @forum.topics.each do |topic|
    %tr
      %td
        = image_tag "icons/comments.png"
      %td
        = link_to topic.title, resource(@forum, topic)
        %br
        %span.description
          = topic.description
      %td
        = topic.posts.count - 1
      %td
        by [last_poster]
        %br
        = topic.posts.last.created_at
      %td
        = link_to 'edit', url(:edit_forum_topic, @forum, @topic)

.action-items
  = link_to 'New Topic', url(:new_forum_topic, @forum)