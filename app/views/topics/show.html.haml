#breadcrumb
  %a{:href => url(:root)}
    MerbHerd
  >>
  %a{:href => resource(@topic.forum)}
    = @topic.forum.name
  >>
  = @topic.title

.action-items
  = link_to 'New Topic', url(:new_forum_topic, @forum)
  |
  = link_to 'Reply', resource(@forum, @topic, :posts, :new)

%table
  %tr
    %td
      = @topic.title
  - @topic.posts.each do |post|
    %tr
      %td
        %div{:id => "p#{post.id}"}
          .post-profile
            [avatar]
            %br
            %a{} [User1]
            %br
            [Administrator]

            %ul
              %li
                Posts: [0]
              %li
                Joined: [Sept 23, 2008]
                
          .post-body
            = post.content
          
.action-items
  = link_to 'New Topic', url(:new_forum_topic, @forum)
  |
  = link_to 'Reply', resource(@forum, @topic, :posts, :new)